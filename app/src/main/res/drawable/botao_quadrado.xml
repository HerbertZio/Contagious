<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Sombra do botão -->
    <item>
        <shape>
            <solid android:color="#707070" />
            <corners android:radius="27dp" />
        </shape>
    </item>
    <!-- Botão -->
    <item android:top="2dp" android:right="2dp" android:left="2dp" android:bottom="2dp">
        <shape>
            <solid android:color="#757575" />
            <corners android:radius="25dp" />
            <stroke android:color="#707070" android:width="2dp"/>
        </shape>
    </item>
    <!-- Gradiente -->
    <item android:top="3dp" android:right="3dp" android:left="3dp" android:bottom="3dp">
        <shape>
            <gradient android:startColor="#FFFFFF" android:endColor="#707070" android:type="linear" android:angle="270"/>
            <corners android:radius="23dp" />
        </shape>
    </item>
</layer-list>
